<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.sscalliance">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".SSCAllianceApp"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/Theme.SSCAlliance"
        android:usesCleartextTraffic="false">
        <activity
            android:name=".ui.sport.mainScreen.v2.compose.EventDetailsView"
            android:exported="false"
            android:label="@string/title_activity_event_details"
            android:theme="@style/Theme.SSCAlliance" />
        <activity
            android:name=".ui.sport.mainScreen.v2.compose.EventsView"
            android:exported="false"
            android:label="@string/title_activity_events_view"
            android:theme="@style/Theme.SSCAlliance" />
        <activity
            android:name=".ui.main.view.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ru.sscalliance.ui.sport.sectionScreen.main.presentation.MainSectionActivity"
            android:exported="false" />
        <activity
            android:name=".ui.sport.eventDetails.presentation.view.EventDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.news.details.NewsDetailsActivity"
            android:exported="false" />
    </application>

</manifest>